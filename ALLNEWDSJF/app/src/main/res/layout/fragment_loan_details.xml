<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              style="@style/transparent_statusbar_fit">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/company_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="企业信息"
                android:textSize="14sp"
                android:textColor="@color/font"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/company_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:text="借款企业:"
                    android:textSize="14sp"
                    android:textColor="@color/font_gray"/>
                <TextView
                    android:id="@+id/company_name_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:text="xxxxx公司"
                    android:textSize="14sp"
                    android:textColor="@color/nfont"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/industry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:text="所属行业:"
                    android:textSize="14sp"
                    android:textColor="@color/font_gray"/>
                <TextView
                    android:id="@+id/industry_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:text="互联网"
                    android:textSize="14sp"
                    android:textColor="@color/nfont"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/borrower"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:text="借款人类型:"
                    android:textSize="14sp"
                    android:textColor="@color/font_gray"/>
                <TextView
                    android:id="@+id/borrower_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:text="互联网"
                    android:textSize="14sp"
                    android:textColor="@color/nfont"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/licence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:text="营业执照号码:"
                    android:textSize="14sp"
                    android:textColor="@color/font_gray"/>
                <TextView
                    android:id="@+id/licence_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:text="*************888"
                    android:textSize="14sp"
                    android:textColor="@color/nfont"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/representative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:text="法定代表人:"
                    android:textSize="14sp"
                    android:textColor="@color/font_gray"/>
                <TextView
                    android:id="@+id/representative_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:text="YinL"
                    android:textSize="14sp"
                    android:textColor="@color/nfont"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/income_and_liabilities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:text="收入及负债情况:"
                    android:textSize="14sp"
                    android:textColor="@color/font_gray"/>
                <TextView
                    android:id="@+id/income_and_liabilities_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:text="无"
                    android:textSize="14sp"
                    android:textColor="@color/nfont"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginTop="20dp"
                android:background="@color/view_bg"/>

            <TextView
                android:id="@+id/loan_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:text="借款详情"
                android:textSize="14sp"
                android:textColor="@color/font"/>

            <LinearLayout
                android:id="@+id/money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:text="借贷余额:"
                    android:textSize="14sp"
                    android:textColor="@color/font_gray"/>
                <TextView
                    android:id="@+id/money_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:text="88万"
                    android:textSize="14sp"
                    android:textColor="@color/nfont"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/use"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:text="借款用途:"
                    android:textSize="14sp"
                    android:textColor="@color/font_gray"/>
                <TextView
                    android:id="@+id/use_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:text="资金周转"
                    android:textSize="14sp"
                    android:textColor="@color/nfont"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/repayment_source"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:text="还款来源:"
                    android:textSize="14sp"
                    android:textColor="@color/font_gray"/>
                <TextView
                    android:id="@+id/repayment_source_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:lineSpacingExtra="6dp"
                    android:text="第一还款来源为借款企业正常经营收入；第二还款来源为借款企业应收账款."
                    android:textSize="14sp"
                    android:textColor="@color/nfont"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/security_measures"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:text="担保措施:"
                    android:textSize="14sp"
                    android:textColor="@color/font_gray"/>
                <TextView
                    android:id="@+id/security_measures_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:text="借款企业法定代表人承担连带责任。"
                    android:textSize="14sp"
                    android:textColor="@color/nfont"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/loan_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:text="借款描述:"
                    android:textSize="14sp"
                    android:textColor="@color/font_gray"/>
                <TextView
                    android:id="@+id/loan_description_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:lineSpacingExtra="6dp"
                    android:text="借款企业项目位于深圳市，借款企业经营正常，不存在重大债务及逾期情况，不存在涉诉涉仲裁情况，不存在被行政处罚情况，未被列入企业异常经营名录，主要从事主要经营茶艺、棋牌、中餐、桌球，设立VIP、大小包房30间，英、美式桌球台14张，宽敞舒适的大厅配备无线网络、电脑及高清投影。此次借款用于资金周转。"
                    android:textSize="14sp"
                    android:textColor="@color/nfont"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginTop="20dp"
                android:background="@color/view_bg"/>

            <TextView
                android:id="@+id/tv_affiliated_enterprise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:text="关联借款"
                android:textSize="14sp"
                android:textColor="@color/font"/>

            <LinearLayout
                android:id="@+id/affiliated_enterprise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:text="是否为关联借款:"
                    android:textSize="14sp"
                    android:textColor="@color/font_gray"/>
                <TextView
                    android:id="@+id/affiliated_enterprise_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:text="否"
                    android:textSize="14sp"
                    android:textColor="@color/nfont"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginTop="20dp"
                android:background="@color/view_bg"/>

            <TextView
                android:id="@+id/tv_credit_situation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:text="信用情况"
                android:textSize="14sp"
                android:textColor="@color/font"/>

            <LinearLayout
                android:id="@+id/credit_situation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:text="截至借款前6个月内借款人征信报告中逾期情况:"
                    android:textSize="14sp"
                    android:textColor="@color/font_gray"/>
                <TextView
                    android:id="@+id/credit_situation_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="6dp"
                    android:text="没有逾期情况"
                    android:textSize="14sp"
                    android:textColor="@color/nfont"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginTop="20dp"
                android:background="@color/view_bg"/>
        </LinearLayout>

    </ScrollView>
    <TextView
        android:gravity="center"
        android:id="@+id/tv_details_btn"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@color/main"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:text="立即投资"
        android:layout_height="40dp" />
</LinearLayout>
