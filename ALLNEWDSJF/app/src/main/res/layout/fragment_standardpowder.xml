<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    style="@style/transparent_statusbar_fit"
    android:layout_height="match_parent"
    tools:context="com.desjf.dsjr.ui.fragment.StandardpowderFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="110dp">
        <TextView
            android:layout_width="match_parent"
            android:textSize="16sp"
            android:textColor="@color/font"
            android:text="我要出借"
            android:gravity="center"
            android:layout_height="60dp"/>
        <View
            android:layout_width="match_parent"
            android:background="@color/title_line"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/lend_rate"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:paddingRight="15dp"
                android:drawablePadding="5dp"
                android:textSize="12sp"
                android:textColor="@color/nfont"
                android:drawableRight="@mipmap/start"
                android:text="年华收益率"/>
            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:background="@color/small_line"/>
            <TextView
                android:id="@+id/lend_time"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:paddingRight="30dp"
                android:drawablePadding="5dp"
                android:textSize="12sp"
                android:textColor="@color/nfont"
                android:drawableRight="@mipmap/single"
                android:text="投资期限"/>
            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:background="@color/small_line"/>
            <TextView
                android:id="@+id/lend_way"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:paddingRight="30dp"
                android:drawablePadding="5dp"
                android:textSize="12sp"
                android:textColor="@color/nfont"
                android:drawableRight="@mipmap/single"
                android:text="还款方式"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/big_line"
            android:layout_height="10dp"/>
    </LinearLayout>

<android.support.v4.widget.SwipeRefreshLayout
    android:id="@+id/srl_invest"
    android:layout_marginTop="110dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_standerpower"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:scrollbars="none"/>

        <!--回到顶部按钮-->
        <Button
            android:id="@+id/top_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="26dp"
            android:layout_marginRight="26dp"
            android:background="@mipmap/ic_launcher"
            android:gravity="center"
           />


        </RelativeLayout>
</android.support.v4.widget.SwipeRefreshLayout>


</FrameLayout>
