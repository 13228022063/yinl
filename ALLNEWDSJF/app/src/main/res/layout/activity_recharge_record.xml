<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              style="@style/transparent_statusbar_fit"
              android:layout_height="match_parent"
              tools:context="com.desjf.dsjr.ui.activity.RechargeRecordActivity">

            <include layout="@layout/title_bar"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/huibai"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:background="@color/table_layout_bg"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textColor="@color/nfont"
                android:textSize="14sp"
                android:text="@string/recharge_money_unit"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textColor="@color/nfont"
                android:textSize="14sp"
                android:layout_weight="1"
                android:text="@string/recharge_date"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textColor="@color/nfont"
                android:textSize="14sp"
                android:layout_weight="1"
                android:text="@string/recharge_status"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/huibai"/>

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/srl_record"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_recharge_record"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </android.support.v4.widget.SwipeRefreshLayout>


</LinearLayout>
