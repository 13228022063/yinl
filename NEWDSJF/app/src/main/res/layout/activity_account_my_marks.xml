<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/transparent_statusbar_fit"

    android:background="@color/view_bg"
    tools:context="com.desjf.dsjr.activity.AccountMyMarksActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:background="@drawable/designorigncolor">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp">
            <ImageView
                android:id="@+id/tv_my_marks_back"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/back_white"/>
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:text="我的积分"/>

        </RelativeLayout>
        <TextView
            android:id="@+id/tv_my_marks_total"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:textColor="@color/white"
            android:text="608,800"/>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:background="@color/white"
                android:layout_width="30dp"
                android:layout_height="1dp"/>
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可用积分"/>
            <View
                android:background="@color/white"
                android:layout_width="30dp"
                android:layout_height="1dp"/>

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_marginLeft="10dp"
        android:textColor="@color/mainOrign"
        android:gravity="center_vertical"
        android:text="积分明细"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/huibai"/>
    <android.support.v7.widget.RecyclerView
        android:background="@color/white"
        android:id="@+id/rv_my_marks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:background="@color/huibai"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

</LinearLayout>
