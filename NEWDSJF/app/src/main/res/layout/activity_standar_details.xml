                        <TextView
                            android:id="@+id/tv_project_sykt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_toRightOf="@+id/tv_project"
                            android:text="剩余可投"
                            android:textColor="@color/nmainOrign"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_toRightOf="@+id/tv_project_sykt"
                            android:text="元"
                            android:textColor="@color/font_under"
                            android:textSize="12sp"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="7dp"
                            android:layout_toLeftOf="@+id/tv_shouye_bfb"
                            android:src="@mipmap/redbag_mb"/>

                        <TextView
                            android:id="@+id/tv_shouye_bfb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:layout_toLeftOf="@+id/ten"
                            android:gravity="right"
                            android:text="满标人奖励"
                            android:textColor="@color/font_under"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/ten"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:layout_toLeftOf="@+id/yuan"
                            android:gravity="right"
                            android:text=""
                            android:textColor="@color/main"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/yuan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="7dp"
                            android:gravity="right"
                            android:text=""
                            android:textColor="@color/font_under"
                            android:textSize="12sp"/>
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/view_fenge"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/huibai"
