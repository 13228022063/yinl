<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/transparent_statusbar_fit"
    android:background="@color/white"
    tools:context="com.desjf.dsjr.activity.LoginActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <ImageView
            android:id="@+id/iv_login_back"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/login_logo_new"/>

    <EditText
        android:id="@+id/et_login_account"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:maxLength="11"
        android:singleLine="true"
        android:digits="0123456789"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:textSize="@dimen/size_4"
        android:hint=" 请输入手机号" />

    <RelativeLayout
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <EditText
            android:id="@+id/et_login_psw"
            android:layout_width="match_parent"
            android:password="true"
            android:maxLength="20"
            android:singleLine="true"
            android:textSize="@dimen/size_4"
            android:layout_height="match_parent"
            android:hint=" 请输入密码"
            />
        <ImageView
            android:id="@+id/iv_login_psw"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/unsea_psw"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_getyzm"
        android:visibility="gone"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <EditText
            android:id="@+id/et_login_yzm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint=" 请输入图形码"/>
        <ImageView
            android:id="@+id/iv_login_txm"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="80dp"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/cb_account"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:button="@null"
            android:checked="true"
            android:drawableLeft="@drawable/login_check_box_remember_psw"
            android:drawablePadding="@dimen/x5"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/x5"
            android:paddingTop="@dimen/x5"
            android:text="记住用户名"
            android:textColor="@color/nfont"
            android:textSize="@dimen/size_7"/>
        <TextView
            android:id="@+id/tv_forget_psw"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/nmainOrign"
            android:text="忘记密码?"
            android:textSize="@dimen/size_7"/>

    </LinearLayout>
    <TextView
        android:id="@+id/tv_login"
        android:gravity="center"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/textview_cricle_btn"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:text="立即登录"/>

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="right"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/font_gray"
            android:text="没有账号?"/>
        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即注册"
            android:textSize="13sp"
            android:textColor="@color/nmainOrign"/>

    </LinearLayout>


</LinearLayout>
