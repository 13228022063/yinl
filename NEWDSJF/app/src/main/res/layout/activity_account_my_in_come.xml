<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    style="@style/transparent_statusbar_fit"

    android:layout_height="match_parent"
    tools:context="com.desjf.dsjr.activity.AccountMyInComeActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:background="@drawable/designorigncolor">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp">
            <ImageView
                android:id="@+id/iv_my_income_back"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/back_white"/>
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:text="我的收益"/>

        </RelativeLayout>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_my_total_income"
                    android:textColor="@color/white"
                    android:gravity="center|bottom"
                    android:layout_weight="1"
                    android:textSize="30sp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />
                <TextView
                    android:textColor="@color/white"
                    android:gravity="center|top"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="总收益(元)" />

            </LinearLayout>
            <View
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:layout_width="1dp"
                android:background="@color/white"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_my_total_outcome"
                        android:textColor="@color/white"
                        android:gravity="center|bottom"
                        android:layout_weight="1"
                        android:textSize="30sp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />
                    <TextView
                        android:textColor="@color/white"
                        android:gravity="center|top"
                        android:layout_weight="1"
                        android:textSize="18sp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:text="总支出(元)" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <TextView
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="      收益记录"
        android:background="@color/huibai"/>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl_income"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_wode_income"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </android.support.v4.widget.SwipeRefreshLayout>

    <View
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/huibai"/>

</LinearLayout>
