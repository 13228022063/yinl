<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_ssjss"
    style="@style/transparent_statusbar_fit"
    android:focusable="true"
    android:background="@color/white"
    android:focusableInTouchMode="true"
    tools:context="com.desjf.dsjr.activity.InvestmentDetailsActivity">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white">
        <ImageView
            android:id="@+id/iv_ljtz_back"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back"/>
        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="投诉建议与争议举报"
            android:textColor="@color/font"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_bg"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y10">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x12"
                android:src="@mipmap/fankui" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x12"
                android:layout_marginTop="@dimen/y8"
                android:layout_toRightOf="@+id/icon"
                android:text="投诉建议与争议举报"
                android:textColor="@color/nfont"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x12"
                android:layout_marginTop="@dimen/y30"
                android:layout_toRightOf="@+id/icon"
                android:text="产品的成长离不开您的参与"
                android:textColor="@color/nfont"
                android:textSize="12sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/one"
            android:layout_marginTop="@dimen/y10">

            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x12"
                android:text="留言类型"
                android:textColor="@color/nfont"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="@dimen/y20">
                <!--
                <TextView
                    android:layout_width="@dimen/x75"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x15"
                    android:gravity="center"
                    android:text="投诉"
                    android:background="@color/white"
                    android:textColor="@color/font_gray"
                    android:textSize="14sp" />       -->
                <ImageView
                    android:id="@+id/t1"
                    android:layout_width="@dimen/x75"
                    android:layout_height="@dimen/y27"
                    android:layout_marginLeft="@dimen/x5"
                    android:src="@mipmap/tschoose" />

                <!--             <TextView
                                android:layout_width="@dimen/x75"
                                android:layout_height="@dimen/y27"
                                android:layout_marginLeft="@dimen/x28"
                                android:layout_toRightOf="@+id/t1"
                                android:gravity="center"
                                android:text="建议"
                                android:textColor="@color/font_gray"
                                android:textSize="14sp" />       -->


                <ImageView
                    android:id="@+id/t2"
                    android:layout_width="@dimen/x75"
                    android:layout_height="@dimen/y27"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/t1"
                    android:layout_marginLeft="@dimen/x4"
                    android:layout_toRightOf="@+id/t1"
                    android:src="@mipmap/jyuchoose"/>

                <!--                <TextView
                                   android:layout_width="@dimen/x75"
                                   android:layout_height="@dimen/y27"
                                   android:layout_marginLeft="@dimen/x28"
                                   android:layout_toRightOf="@+id/t2"
                                   android:gravity="center"
                                   android:text="举报"
                                   android:textColor="@color/font_gray"
                                   android:textSize="14sp" />          -->
                <ImageView
                    android:id="@+id/t4"
                    android:layout_width="@dimen/x75"
                    android:layout_height="@dimen/y27"
                    android:layout_marginLeft="@dimen/x4"
                    android:layout_toRightOf="@+id/t2"
                    android:src="@mipmap/zyuchoose" />

                <ImageView
                    android:id="@+id/t3"
                    android:layout_width="@dimen/x75"
                    android:layout_height="@dimen/y27"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="2dp"
                    android:layout_alignParentTop="true"
                    android:src="@mipmap/jbuchoose"/>

                           </RelativeLayout>

                       </RelativeLayout>

                       <RelativeLayout
                           android:id="@+id/three"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_below="@+id/two"
                           android:layout_marginTop="@dimen/y10">

                           <TextView
                               android:id="@+id/content"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginLeft="@dimen/x12"
                               android:text="留言内容"
                               android:textColor="@color/nfont"
                               android:textSize="14sp" />

                           <EditText
                               android:id="@+id/et_content"
                               android:layout_width="match_parent"
                               android:layout_height="@dimen/y80"
                               android:layout_below="@+id/content"
                               android:layout_marginLeft="@dimen/x12"
                               android:layout_marginRight="@dimen/x12"
                               android:layout_marginTop="@dimen/y10"
                               android:background="@color/whitesmoke"
                               android:maxLength="500"
                               android:gravity="top"
                               android:hint="我们期待您的意见和反馈,我们会不断优化产品，为您提供更好的体验与服务。"
                               android:paddingLeft="@dimen/x5"
                               android:paddingRight="@dimen/x5"
                               android:paddingTop="@dimen/y4"
                               android:textSize="12sp" />
                           <RelativeLayout
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_marginLeft="@dimen/x12"
                               android:layout_marginRight="@dimen/x12"
                               android:background="@color/whitesmoke"
                               android:layout_below="@+id/et_content">

                               <TextView
                                   android:id="@+id/all"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:layout_alignParentRight="true"
                                   android:layout_marginRight="@dimen/x5"
                                   android:text="/500"
                                   />
                               <TextView
                                   android:id="@+id/number"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:layout_toLeftOf="@+id/all"
                                   android:text="0"
                                   />


                           </RelativeLayout>

                       </RelativeLayout>

                       <RelativeLayout
                           android:id="@+id/four"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_below="@+id/three"
                           android:layout_marginTop="@dimen/y10">

                           <TextView
                               android:id="@+id/shuoming"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginLeft="@dimen/x12"
                               android:text="(上传图片有助于说明问题,每张图片≤10M,最多五张。)"
                               android:textColor="@color/nfont"
                               android:textSize="14sp" />

                           <RelativeLayout
                               android:layout_width="match_parent"
                               android:layout_height="@dimen/y80"
                               android:layout_marginTop="@dimen/y15">
                               <!--                  <ImageView
                                                    android:id="@+id/img1"
                                                    android:layout_width="@dimen/x70"
                                                    android:layout_height="@dimen/y70"
                                                    android:layout_marginLeft="@dimen/x28"
                                                    />
                                                <ImageView
                                                    android:id="@+id/img2"
                                                    android:layout_toRightOf="@+id/img1"
                                                    android:layout_width="@dimen/x70"
                                                    android:layout_height="@dimen/y70"
                                                    android:layout_marginLeft="@dimen/x28"
                                                    android:src="@mipmap/tianjia"/>
                                                <ImageView
                                                    android:id="@+id/img3"
                                                    android:layout_toRightOf="@+id/img2"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginLeft="@dimen/x28"
                                                    android:src="@mipmap/tianjia"/>      -->
                <!--展示上传的图片-->
                <GridView
                    android:id="@+id/gridView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:columnWidth="50dp"
                    android:horizontalSpacing="10dp"
                    android:numColumns="5"
                    android:verticalSpacing="10dp" />

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/five"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/four"
            android:layout_marginTop="@dimen/y7">

            <TextView
                android:id="@+id/tijiao"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y30"
                android:layout_marginLeft="@dimen/x15"
                android:layout_marginRight="@dimen/x15"
                android:layout_marginTop="@dimen/y4"
                android:background="@drawable/textview_cricle_btn"
                android:gravity="center"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tijiao"
                android:layout_marginTop="@dimen/y6"
                android:text="客服电话:400-606-3099"
                android:textColor="@color/nfont"
                android:textSize="14sp" />

        </RelativeLayout>

    </RelativeLayout>
        </LinearLayout>
</LinearLayout>
