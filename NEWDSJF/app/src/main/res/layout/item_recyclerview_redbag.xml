<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/huibai"/>
    <ImageView
        android:id="@+id/iv_recyclerview_choose"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/red_unchoose"/>
    <TextView
        android:id="@+id/tv_recyclerview"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/font"
        android:layout_toRightOf="@id/iv_recyclerview_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="金额:"/>
    <TextView
        android:id="@+id/tv_recyclerview_money"
        android:layout_marginTop="20dp"
        android:textColor="@color/main"
        android:layout_toRightOf="@id/tv_recyclerview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100元"/>
    <TextView
        android:id="@+id/tv_recyclerview_time"
        android:layout_below="@id/tv_recyclerview_money"
        android:layout_marginLeft="10dp"
        android:textColor="@color/font"
        android:layout_toRightOf="@id/iv_recyclerview_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="使用金额:20元"/>
    <TextView
        android:id="@+id/tv_recyclerview_less"
        android:layout_below="@id/tv_recyclerview_time"
        android:layout_marginLeft="10dp"
        android:textColor="@color/font"
        android:layout_toRightOf="@id/iv_recyclerview_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="使用金额:20元"/>
    <TextView
        android:id="@+id/tv_tender_period"
        android:layout_toRightOf="@id/iv_recyclerview_choose"
        android:layout_below="@id/tv_recyclerview_less"
        android:layout_marginLeft="10dp"
        android:textColor="@color/font"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="投资使用期限类型:"/>
</RelativeLayout>