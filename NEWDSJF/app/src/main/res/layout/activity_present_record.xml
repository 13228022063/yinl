<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:background="@color/view_bg"
    android:focusableInTouchMode="true"
    tools:context="com.desjf.dsjr.activity.AccountWithDrawActivity">
    <com.desjf.dsjr.cyview.customview.transparentstatusbar.StatusBarView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <ImageView
            android:id="@+id/iv_withdraw_back"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back"/>
        <TextView
            android:id="@+id/tv_project_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="提现记录"
            android:textColor="@color/font"
            android:layout_centerInParent="true"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/huibai"/>
    <LinearLayout
        android:background="@color/titlebg"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="35dp">
        <TextView
            android:gravity="center"
            android:textColor="@color/nfont"
            android:text="提现金额(元)"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <!--
        <TextView
            android:gravity="center"
            android:textColor="@color/nfont"
            android:text="到账金额"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/huibai"/>
            -->
        <TextView
            android:gravity="center"
            android:textColor="@color/nfont"
            android:text="提现时间"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:gravity="center"
            android:textColor="@color/nfont"
            android:text="状态"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <!--
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/huibai"/>
        <TextView
            android:gravity="center"
            android:textColor="@color/nfont"
            android:text="操作"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

-->

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/huibai"/>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl_jl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_txjl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>
