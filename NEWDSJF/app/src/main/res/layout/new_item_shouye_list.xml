<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_shouye_list_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="活动专区00266"
            android:textColor="@color/font" />
        <!--
        <ImageView
            android:id="@+id/iv_shouye_type"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:src="@mipmap/newsshare"/>     -->
        <TextView
            android:id="@+id/tv_xinshoubiao"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/text_view_type_border_red"
            android:gravity="center"
            android:padding="3dp"
            android:text="新手标，每人限投两万"
            android:textColor="@color/red"
            android:textSize="11sp" />


        <TextView
            android:id="@+id/tv_abc"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:text="折让比例 "
            android:textSize="8sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_abc_ll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:text="0.2%"
            android:textColor="@color/main"
            android:textSize="8sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_touzijiangli"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/tv_shouye_yqnh_bfb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:textColor="@color/main"
            android:textSize="8sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:layout_marginLeft="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_shouye_yqnh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14.00"
                    android:textColor="@color/main"
                    android:textSize="14sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="%"
                        android:textColor="@color/main"
                        android:textSize="11sp" />
                    <TextView
                        android:id="@+id/tv_jiaxi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/main"
                        android:textSize="11sp" />
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_shouye_yqnh_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:layout_marginBottom="2dp"
                    android:textSize="14sp"
                    android:text="年化利率"
                    android:textColor="@color/font_gray" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="13dp"
                android:layout_weight="0.8"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_shouye_wfsyy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_shouye_wfsy"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:layout_marginBottom="2dp"
                    android:text="期限"
                    android:textSize="14sp"
                    android:textColor="@color/font_gray" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="13dp"
                android:layout_weight="0.8"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_shouye_je"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/font"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_shouye_je_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:layout_marginBottom="2dp"
                    android:text="总金额"
                    android:textSize="14sp"
                    android:textColor="@color/font_gray" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:layout_marginRight="12dp"
                android:gravity="center"
                android:orientation="vertical">
                <Button
                    android:id="@+id/button"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/textview_cricle_btn"
                    android:textColor="@color/bg_white"
                    android:text="立即投资"/>
            </LinearLayout>

                <!--
                <TextView
                    android:id="@+id/tv_shouye_qtje"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100元"
                    android:textColor="@color/font"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_shouye_qtje_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="起投金额"
                    android:textColor="@color/font_gray" />
-->



        </LinearLayout>


        <RelativeLayout
            android:id="@+id/rl_daojishi"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/textview_circle_btn_deep"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_woqunima"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:src="@mipmap/daojishi" />

            <com.desjf.dsjr.bean.TimerView
                android:id="@+id/timerView_new"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/iv_woqunima"
                android:gravity="center" />
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_progress"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:id="@+id/progesss_value1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/p_right"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="2dp"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:text="97%" />
    <ProgressBar
        android:id="@+id/pb_shouye"
        android:layout_width="match_parent"
        android:indeterminateDrawable="@android:drawable/progress_indeterminate_horizontal"
        android:indeterminateOnly="false"
        android:layout_height="3dp"
        android:max="100"
        style="@style/StyleProgressBarMini" />

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/ll_under"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_project"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:textColor="@color/font_under"
            android:text="剩余可投"
            android:textSize="12sp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_shouye_jine"
            android:layout_toRightOf="@+id/tv_project"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/nmainOrign"
            android:text="剩余可投"
            android:textSize="12sp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv"
            android:layout_toRightOf="@+id/tv_shouye_jine"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/font_under"
            android:text="元"
            android:textSize="12sp"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_toLeftOf="@+id/ten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginRight="5dp"
            android:src="@mipmap/redbag_mb"/>
        <!--      <TextView
              android:id="@+id/tv_shouye_bfb"
              android:layout_toLeftOf="@+id/ten"
              android:layout_marginTop="7dp"
              android:gravity="right"
              android:layout_width="wrap_content"
              android:textColor="@color/font_under"
              android:text="满标人奖励"
              android:textSize="12sp"
              android:layout_height="wrap_content" />  -->
              <TextView
                  android:id="@+id/ten"
                  android:layout_marginTop="7dp"
                  android:gravity="right"
                  android:layout_marginRight="10dp"
                  android:layout_alignParentRight="true"
                  android:layout_width="wrap_content"
                  android:text="10"
                  android:textSize="12sp"
                  android:layout_height="wrap_content" />
              <!--
              <TextView
                  android:id="@+id/yuan"
                  android:layout_marginRight="15dp"
                  android:layout_marginTop="7dp"
                  android:gravity="right"
                  android:layout_width="wrap_content"
                  android:layout_alignParentRight="true"
                  android:textColor="@color/font_under"
                  android:text="元"
                  android:textSize="12sp"
                  android:layout_height="wrap_content" />   -->
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_bg"/>
    <View
        android:id="@+id/view_fenge"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_height="13dp"
        android:background="@color/view_bg"/>
</LinearLayout>