    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_bg"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/view_bg"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/x"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/nfont"
            android:textSize="14sp"
            android:text="预计收益:"/>
        <TextView
            android:id="@+id/tv_ljtz_yjsy"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/x"
            android:layout_marginTop="12dp"
            android:background="@color/view_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/nmainOrign"
            android:textSize="14sp"
            android:text="----元"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/real_pay"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="实际付款----元"
        android:textColor="@color/nfont"
        android:textSize="15sp"
        android:background="@color/anorange"
        android:gravity="center_vertical"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/view_bg"/>
    <LinearLayout
        android:id="@+id/ll_payPwd"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="交易密码"/>
        <EditText
            android:id="@+id/et_litj_jymm"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:layout_weight="1"
            android:password="true"
            android:layout_width="0dp"
            android:background="@null"
            android:textColorHint="@color/font_gray"
            android:layout_height="match_parent"
            android:hint="请输入交易密码"/>
        <TextView
            android:id="@+id/iv_ljtz_wjjymm"
            android:layout_marginRight="10dp"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/main"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="忘记交易密码？"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_bg"/>

    <LinearLayout
        android:id="@+id/ll_dxmm"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="定向密码"
            android:textSize="15sp"
            android:gravity="center_vertical"/>
        <EditText
            android:id="@+id/et_ljtz_qsrdxmm"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:layout_weight="1"
            android:password="true"
            android:layout_width="0dp"
            android:background="@null"
            android:textColorHint="@color/font_gray"
            android:layout_height="match_parent"
            android:hint="请输入定向密码"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_set_word"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/view_bg"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:visibility="gone"
        android:layout_marginTop="5dp"
        android:text="为了保证投资交易为本人操作，请设置交易密码！"
        android:textColor="@color/redbag_tishi"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:background="@color/view_bg"
        android:layout_height="20dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_ljtz_touzi"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:background="@color/nmainOrign"
            android:gravity="center"
            android:text="立即投资"
            android:textColor="@color/white"
            android:textSize="18sp" />


    </RelativeLayout>




</LinearLayout>
