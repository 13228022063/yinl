<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_ssjss"
    style="@style/transparent_statusbar_fit"

    android:focusable="true"
    android:background="@color/view_bg"
    android:focusableInTouchMode="true"
    tools:context="com.desjf.dsjr.activity.InvestmentDetailsActivity">
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <ImageView
            android:id="@+id/iv_ljtz_back"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back"/>
        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="投资详情"
            android:textColor="@color/font"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_bg"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="90dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_tzxq_yqnh"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="10.75"
                android:gravity="center"
                android:textColor="@color/main"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/yqnh"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="预期年化"
                android:textColor="@color/nfont"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:background="@color/view_bg"/>


        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_ljtz_jkqx"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:text="12"
                android:textColor="@color/font" />

            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="借款期限"
                android:textColor="@color/nfont"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_bg"/>
    <RelativeLayout
        android:id="@+id/tv_sykt"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_toLeftOf="@+id/tv_jine"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_height="40dp"
            android:gravity="center"
            android:textColor="@color/nfont"
            android:textSize="15sp"
            android:text="剩余可投金额"
            />
        <TextView
            android:id="@+id/tv_jine"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:textColor="@color/nmainOrign"
            android:textSize="15sp"
            android:text="88888888"
            />
        <TextView
            android:layout_toRightOf="@+id/tv_jine"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:textColor="@color/nfont"
            android:textSize="15sp"
            android:text="元"
            />

    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/view_bg"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:textColor="@color/nfont"
            android:text="账户余额"/>
        <TextView
            android:id="@+id/tv_ljtz_zhye"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="16sp"/>
        <Button
            android:id="@+id/tv_ljtz_chongzhi"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:background="@drawable/textview_cricle_btn_w"
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:text="充值"
            android:textColor="@color/nmainOrign"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_tzxq_tzje_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:textColor="@color/nfont"
            android:text="投资金额"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_ljtz_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:digits="0123456789"
            android:textSize="15sp"
            android:hint="100起投,50的整数倍递增"
            android:textColorHint="@color/n_font_gray" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/view_bg" />

        <TextView
            android:id="@+id/tv_ljtz_qetz"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="全额投资"
            android:textSize="15sp"
            android:textColor="@color/font_more" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/view_bg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="红包卡券"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_ljtz_hongbao"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/font_gray"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/ll_ljtz_redbag_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_qxzhb"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="请选择"
                android:textColor="@color/font_more"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_qxzhb_jine"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                android:textColor="@color/main"
                android:textSize="16sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="奖励"
                android:textColor="@color/font_more"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:src="@mipmap/more_list" />
        </LinearLayout>

    </LinearLayout>

