<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/view_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/x10"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <View
            android:layout_width="50dp"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:background="@color/shouye_line"
            android:layout_marginRight="11dp"
            />
        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="平台运营时长"
            android:gravity="center"
            android:textColor="@color/font_gray"
            android:textSize="12sp"/>
        <View
            android:layout_marginLeft="11dp"
            android:layout_width="50dp"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:background="@color/shouye_line"
            />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x7"
        android:layout_below="@+id/title">
        <TextView
            android:id="@+id/tv_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="02年"
            android:gravity="center"
            android:textColor="@color/font"
            android:textSize="14sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time"
        android:layout_marginTop="@dimen/y7">

        <RelativeLayout
            android:id="@+id/r"
            android:layout_toLeftOf="@+id/line"
            android:layout_marginRight="@dimen/x40"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/all_money_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="累计交易本金(元)"
            android:textSize="12sp"
            android:textColor="@color/font_gray"/>
        <TextView
            android:id="@+id/all_money"
            android:layout_below="@+id/all_money_text"
            android:layout_alignRight="@+id/all_money_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x5"
            android:text="8888888"
            android:textSize="12sp"
            android:textColor="@color/font"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/line"
            android:layout_width="1dp"
            android:layout_height="24dp"
            android:layout_centerInParent="true"
            android:background="@color/shouye_line"/>
        <RelativeLayout
            android:id="@+id/r2"
            android:layout_toRightOf="@+id/line"
            android:layout_marginLeft="@dimen/x40"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/all_interest_text"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="累计赚取利息(元)"
            android:textSize="12sp"
            android:textColor="@color/font_gray"/>
        <TextView
            android:id="@+id/all_interest"
            android:layout_below="@+id/all_interest_text"
            android:layout_alignParentRight="true"
            android:layout_alignLeft="@+id/all_interest_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x5"
            android:text="888888888"
            android:textSize="12sp"
            android:textColor="@color/font"/>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/y8"
        android:layout_marginBottom="@dimen/y9">

        <TextView
            android:id="@+id/miaoshu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预期收益非平台承诺回报"
            android:gravity="center"
            android:textSize="11sp"
            android:textColor="@color/used"/>
        <TextView
            android:layout_below="@+id/miaoshu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x2"
            android:text="市场有风险，投资需谨慎"
            android:textSize="11sp"
            android:textColor="@color/used"/>

    </RelativeLayout>

</RelativeLayout>
